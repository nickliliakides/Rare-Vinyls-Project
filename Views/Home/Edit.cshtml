@model RareVinyls.Models.Vinyl

@{
    ViewBag.Title = "Edit Vinyl Details";
}
<h2 class="text-center title">@ViewBag.Title</h2>

<hr />

<div class="text-center"><img class="vinylImage" src="@Url.Content(Model.Picture)" height="120" /></div>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.Title, null, new { @class = "text-danger col-md-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Artist, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Artist, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.Artist, null, new { @class = "text-danger col-md-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReleaseYear, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.ReleaseYear, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.ReleaseYear, null, new { @class = "text-danger col-md-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Genre, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Genre, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.Genre, null, new { @class = "text-danger col-md-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.Price, null, new { @class = "text-danger col-md-2" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Owner's email</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Owner_s_Email, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.Owner_s_Email, null, new { @class = "text-danger col-md-2" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Additional Info</label>
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.Additional_Info, new { @class = "form-control col-md-6", rows = 4 })
                @Html.ValidationMessageFor(model => model.Additional_Info, null, new { @class = "text-danger col-md-2" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Picture URL</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Picture, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control col-md-6",
                        placeholder = "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSENEvLDx-AshXMqesWzx3fZRLF_kgX-OanpfZTz-1o1P_H2Qdd"
                    }
                })
                @Html.ValidationMessageFor(model => model.Picture, null, new { @class = "text-danger col-md-2" })
            </div>
        </div>
        <br />
        <div class="text-center">
            <input type="submit" value="Edit" class="btn btn-default" />&nbsp;
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
} @*end form*@

