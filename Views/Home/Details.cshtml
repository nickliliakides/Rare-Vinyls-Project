@model RareVinyls.Models.Vinyl

@{
    ViewBag.Title = "Vinyl Details";
}
<h2 class="text-center title">@ViewBag.Title</h2>


<div class="container">
    <hr />
    <div class="col-md-3">
        <img class="vinylImage" src="@Url.Content(Model.Picture)" alt="Vinyl" height="200">
        <br /><br />
        <p class="text-center"></p>


    </div>
    <div class="col-md-6">
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)<br /><br />
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Artist)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Artist)<br /><br />
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ReleaseYear)<br /><br />
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Genre)<br /><br />
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price)<br /><br />
            </dd>
            <dt>
                Owner's Email
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Owner_s_Email)<br /><br />
            </dd>
            <dt>
                Additional Info
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Additional_Info)<br /><br />
            </dd>
			
        </dl>
    </div>	
</div>
<div class="text-center">@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })</div>

