@model RareVinyls.Models.Vinyl

@{
    ViewBag.Title = "Add a New Vinyl Record";
}

<h2 class="text-center title">@ViewBag.Title</h2>

<hr />

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-4">Title</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Artist</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Artist, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.Artist, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Year of Release</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.ReleaseYear, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.ReleaseYear, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Genre</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Genre, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.Genre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Price</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Owner's email</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Owner_s_Email, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.Owner_s_Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Additional Info</label>
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.Additional_Info, new { @class = "form-control col-md-6", rows = 4 })
                @Html.ValidationMessageFor(model => model.Additional_Info, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Picture URL</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Picture, new
                { htmlAttributes = new { @class = "form-control col-md-6", placeholder = "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSENEvLDx-AshXMqesWzx3fZRLF_kgX-OanpfZTz-1o1P_H2Qdd" } })
                @Html.ValidationMessageFor(model => model.Picture, null, new { @class = "text-danger" })
            </div>
        </div>
        
        <br />

        <div class="text-center">

            <input type="submit" value="Add" class="btn btn-default" />&nbsp
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })

        </div>
    </div>
}

<br /><br />

